extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Map Type:
      input#name.form-control(type='text', placeholder="'General reference', 'Thematic' etc." name='name' required value=(undefined===maptype ? '' : maptype.name) )
      label(for='description') Map Type Description:
      input#description.form-control(type='text', placeholder="Describe what this kind of map does." name='description' required value=(undefined===maptype ? '' : maptype.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
